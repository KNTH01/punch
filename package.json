{
  "name": "punch",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "db:migrate": "bun run migrate.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts",
    "typecheck": "bun --bun tsc --noEmit",
    "lint": "oxlint --type-aware --fix",
    "format": "oxfmt",
    "build": "bun build --compile --minify --sourcemap --bytecode src/index.ts --outfile punch",
    "test": "bun test"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "effect": "^3.19.14"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
